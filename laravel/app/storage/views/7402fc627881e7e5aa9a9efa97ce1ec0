<?php $__env->startSection('content'); ?>
	
	<?php if(Session::has('message')): ?>
		<?php echo Session::get('message'); ?>

	<?php endif; ?>

	<?php if(Session::has('error')): ?>
		<?php echo Session::get('error'); ?>

	<?php endif; ?>

	<?php if($errors->has()): ?>
		<ul>
			<?php foreach($errors->all() as $error): ?>
				<li><?php echo $error; ?></li>
			<?php endforeach; ?>
		</ul>
	<?php endif; ?>

	<?php echo Form::open(array('method' => 'POST', 'url' => url('/users/password'))); ?>


		<label>New password</label>
		<?php echo Form::password('new_password'); ?>


		<label>Confirm password</label>
		<?php echo Form::password('new_password_confirm'); ?>


		<label>Current password</label>
		<?php echo Form::password('password'); ?>


		<?php echo Form::submit('Change password'); ?>


	<?php echo Form::close(); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('layouts.members', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>