<?php $__env->startSection('content'); ?>

	<?php if(Session::has('message')): ?>
		<?php echo Session::get('message'); ?>

	<?php endif; ?>
		
	<?php if(Session::has('error')): ?>
		<?php echo Session::get('error'); ?>

	<?php endif; ?>

	<?php if($errors->has()): ?>
		<ul>
			<?php foreach($errors->all() as $error): ?>
				<li><?php echo $error; ?></li>
			<?php endforeach; ?>
		</ul>
	<?php endif; ?>

	<?php echo Form::open(array('method' => 'POST', 'url' => url('/admin/login'))); ?>


		<label>Email</label>
		<?php echo Form::text('email', Input::old('email', ''), array('placeholder' => 'Email')); ?>


		<label>Password</label>
		<?php echo Form::password('password', array('placeholder' => 'Password')); ?>


		<?php if($showCaptcha): ?>
			<?php echo Form::captcha(); ?>

		<?php endif; ?>

		<?php echo Form::submit('Login'); ?>

		<a href="<?php echo url('/forgot'); ?>">Forgot password?</a>

	<?php echo Form::close(); ?>


<?php $__env->stopSection(); ?>

<?php $__env->startSection('scripts'); ?>
	<?php if($showCaptcha): ?>
		<?php echo Captcha::script(); ?>

	<?php endif; ?>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('layouts.general', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>